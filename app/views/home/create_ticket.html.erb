<header>
    <h1>Are you interested to contact our support?</h1>
</header>
<section>				
    <div id="container_demo" >
        <div id="wrapper" style="width:75%;">
            <div id="login" class="animate form">
                <%= form_for @ticket, url: {action: "save_ticket"}, html: {class: "nifty_form"} do |f| %>
                    <h1>Create Ticket</h1> 
                    <p> 
                        <label for="email" class="uname"> Your email</label>
                        <%= f.text_field :email, :value=>current_user.email, :required=>"required" %>
                        <%= f.hidden_field :user_id, :value=> current_user.id %>
                    </p>
                    <p> 
                        <label for="subject" class="uname">Subject</label>
                        <%= f.text_field :subject, :required=>"required" %>
                    </p>
                    
                    <p> 
                        <label for="message" class="uname">Message</label>
                        <%= f.text_area :message, rows: "6" %>
                    </p>
                    <p class="login button"> 
                        <%= f.submit "Create" %> 
					</p>
                <% end %>
            </div>						
        </div>
    </div>  
</section>